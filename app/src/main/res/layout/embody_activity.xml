<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/rlt_toolbar2"/>

    <android.support.constraint.Guideline
            android:id="@+id/gul_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"
    />
    <android.support.constraint.Guideline
            android:id="@+id/gul_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
    />
    <android.support.constraint.Guideline
            android:id="@+id/gul_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="150dp"
    />
    <View
            android:id="@+id/vv"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@mipmap/bank_card_bg"/>
    <TextView
            android:id="@+id/tv_card_name"
            app:layout_constraintTop_toTopOf="@id/vv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
    />
    <TextView
            android:layout_margin="30dp"
            app:layout_constraintTop_toTopOf="@id/vv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="14sp"
    />
    <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** "
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_card_num"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_card_num"
            app:layout_constraintBottom_toBottomOf="@id/tv_card_num"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_card_num"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@id/vv"
            android:textColor="@color/white"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            app:layout_constraintTop_toTopOf="@id/gul_1"
            android:textColor="#ff333333"
            android:textSize="18sp"
    />
    <TextView
            android:id="@+id/tv_price_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="¥"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_price"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
    />
    <com.xw.repo.XEditText
            android:id="@+id/et_price_num"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:layout_marginStart="14dp"
            android:hint="请输入提现金额"
            android:layout_marginEnd="16dp"
            android:inputType="number"
            android:gravity="center_vertical"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/hui_round_kuang2"
            app:layout_constraintTop_toTopOf="@id/tv_price_num"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_num"
            app:layout_constraintStart_toEndOf="@id/tv_price_num"
    />
    <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="元"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/et_price_num"
            app:layout_constraintTop_toTopOf="@id/et_price_num"
            app:layout_constraintBottom_toBottomOf="@id/et_price_num"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额不能低于100元"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/tv_price_num"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_unit"
            android:textColor="#ff656565"
            android:textSize="12sp"
    />
    <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额: "
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gul_2"
            android:textColor="#ff656565"
            android:textSize="15sp"
    />
    <TextView
            android:id="@+id/tv_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手续费比例:"
            app:layout_constraintStart_toStartOf="@id/tv_balance"
            app:layout_constraintTop_toBottomOf="@id/tv_balance"
            android:textColor="#ff656565"
            android:textSize="15sp"
    />
    <TextView
            android:id="@+id/tv_price_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际提现:"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="@id/tv_scale"
            app:layout_constraintTop_toBottomOf="@id/tv_scale"
            android:textColor="#ff656565"
            android:textSize="15sp"
    />
    <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:layout_marginStart="20dp"
            android:onClick="click"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gul_2"
            android:layout_marginEnd="20dp"
            android:textColor="@color/blue"
            android:textSize="15sp"
    />

    <TextView
            android:id="@+id/tv_sure"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:background="@drawable/select_blue_round"
            android:gravity="center"
            android:onClick="click"
            android:text="确认提现"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/gul_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>