<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white">

    <include layout="@layout/rlt_toolbar"/>

    <TextView
            android:id="@+id/tv_phone_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableTop="@drawable/line"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="手机号："
            android:drawableStart="@mipmap/bt"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <com.xinzeyijia.houselocks.ui.view.ClearEditText
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="118dp"
            android:background="@drawable/round_bg_write"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_phone_start"
            app:layout_constraintTop_toTopOf="@id/tv_phone_start"/>

    <TextView
            android:id="@+id/tv_name_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableStart="@mipmap/bt"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="姓名："
            android:textColor="@color/black"
            android:textSize="16sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone"/>

    <com.xinzeyijia.houselocks.ui.view.ClearEditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_bg_write"
            android:hint="请输入姓名"
            android:inputType="text"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_start"
            app:layout_constraintTop_toTopOf="@id/tv_name_start"/>

    <TextView
            android:id="@+id/tv_idcard_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@mipmap/bt"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="身份证号："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>
    <TextView
            android:id="@+id/tv_nation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="民族："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_idcard_start"/>
    <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:onClick="click"
            android:text="性别："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nation"/>
    <TextView
            android:id="@+id/tv_idcard_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="证件类型："
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sex"/>

    <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:drawableBottom="@drawable/line"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_idcard_type"/>


    <com.xinzeyijia.houselocks.ui.view.ClearEditText
            android:id="@+id/tv_idcard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_bg_write"
            android:hint="请输入身份证号码"
            android:inputType="text"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_idcard_start"
            app:layout_constraintTop_toTopOf="@id/tv_idcard_start"/>
    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_nation"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:minEms="5"
            android:gravity="center_vertical"
            android:hint="请选择民族"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_idcard"
            app:layout_constraintBottom_toBottomOf="@id/tv_nation"
            app:layout_constraintTop_toTopOf="@id/tv_nation"/>
    <TextView
            android:id="@+id/spinner_idcard_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:text="身份证"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_idcard_type"
            app:layout_constraintTop_toTopOf="@id/tv_idcard_type"/>
    <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_sex"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:minEms="5"
            android:gravity="center_vertical"
            android:hint="请选择性别"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_idcard"
            app:layout_constraintBottom_toBottomOf="@id/tv_sex"
            app:layout_constraintTop_toTopOf="@id/tv_sex"/>

    <com.xinzeyijia.houselocks.ui.view.ClearEditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_bg_write"
            android:hint="请输入详细地址(必填)"
            android:inputType="text"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_address"
            app:layout_constraintStart_toEndOf="@id/tv_address"
            app:layout_constraintTop_toTopOf="@id/tv_address"/>

    <TextView
            android:id="@+id/tv_idcard_img_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:onClick="click"
            android:text="证件照："
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_address"/>

    <ImageView
            android:id="@+id/img_idcard"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/idcard_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_idcard_img_start"/>

    <TextView
            android:id="@+id/tv_sure"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/select_blue_round"
            android:gravity="center"
            android:onClick="click"
            android:text="完成"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_idcard"/>

</android.support.constraint.ConstraintLayout>