<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">

    <include layout="@layout/rlt_toolbar"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="入住人信息"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:text="姓名："
                        android:textColor="@color/hui5"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/tv_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="@id/tv_idcard_num"
                        app:layout_constraintTop_toTopOf="@id/tv_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_name"/>
                <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:text="手机号："
                        android:textColor="@color/hui5"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_name"/>
                <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="@id/tv_idcard_num"
                        app:layout_constraintTop_toTopOf="@id/tv_phone"
                        app:layout_constraintBottom_toBottomOf="@id/tv_phone"/>
                <TextView
                        android:id="@+id/tv_idcard"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:text="证件号："
                        android:textColor="@color/hui5"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_phone"/>
                <TextView
                        android:id="@+id/tv_idcard_num"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/tv_idcard"
                        app:layout_constraintTop_toTopOf="@id/tv_idcard"
                        app:layout_constraintBottom_toBottomOf="@id/tv_idcard"/>
                <TextView
                        android:id="@+id/tv_iccard_img"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="17dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="身份证照片"
                        android:layout_marginTop="32dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_idcard"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="（人像面）"
                        android:textColor="@color/hui5"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/tv_iccard_img"
                        app:layout_constraintTop_toTopOf="@id/tv_iccard_img"
                        app:layout_constraintBottom_toBottomOf="@id/tv_iccard_img"
                />
            </android.support.constraint.ConstraintLayout>


            <ImageView
                    android:id="@+id/img_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:onClick="click"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:background="@mipmap/add_idcard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_iccard_img"/>
            <TextView
                    android:id="@+id/tv_face_img"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="人脸照片"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_idcard"/>

            <ImageView
                    android:id="@+id/img_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:onClick="click"
                    android:scaleType="fitXY"
                    android:background="@mipmap/add_face_icon"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_face_img"/>

            <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="86dp"
                    android:background="@drawable/select_blue_round"
                    android:gravity="center"
                    android:onClick="click"
                    android:text="完成"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="100dp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_face"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
