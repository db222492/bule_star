<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/back"
                style="@style/back_wh"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="click"
                android:padding="@dimen/dp_10"
                android:paddingEnd="20dp"
                android:src="@mipmap/left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tv_mycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintStart_toEndOf="@id/back"
                app:layout_constraintTop_toTopOf="@id/back"/>

        <ImageView
                android:id="@+id/img_bg"
                android:layout_width="386dp"
                android:layout_height="128dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/darkblue_shape_gradual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tv_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="11dp"
                android:text="房号：502"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_bg"
                app:layout_constraintStart_toStartOf="@id/img_bg"
                app:layout_constraintTop_toTopOf="@id/img_bg"/>


        <View
                android:id="@+id/line"
                android:layout_width="353dp"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                android:background="@color/hui_light4"
                app:layout_constraintEnd_toEndOf="@id/img_bg"
                app:layout_constraintStart_toStartOf="@id/img_bg"
                app:layout_constraintTop_toTopOf="@id/img_bg"/>

        <TextView
                android:id="@+id/tv_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:text="入住"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/img_bg"
                app:layout_constraintTop_toBottomOf="@id/line"/>

        <TextView
                android:id="@+id/tv_check_in_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="click"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_check_in"
                app:layout_constraintTop_toBottomOf="@id/tv_check_in"/>
        <TextView
                android:id="@+id/tv_check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="click"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_check_in_bot"
                app:layout_constraintTop_toTopOf="@id/tv_check_in_bot"
                app:layout_constraintBottom_toBottomOf="@id/tv_check_in_bot"
        />
        <TextView
                android:id="@+id/tv_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离店"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/tv_check_out_bot"
                app:layout_constraintTop_toTopOf="@id/tv_check_in"/>

        <TextView
                android:id="@+id/tv_check_out_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:onClick="click"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/tv_check_out_time"
                app:layout_constraintTop_toBottomOf="@id/tv_check_out"/>
        <TextView
                android:id="@+id/tv_check_out_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="click"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_check_out_bot"
                app:layout_constraintBottom_toBottomOf="@id/tv_check_out_bot"
        />
        <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:text="1晚"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/img_bg"
                app:layout_constraintEnd_toEndOf="@id/img_bg"
                app:layout_constraintStart_toStartOf="@id/img_bg"/>

        <View
                android:layout_width="11dp"
                android:layout_height="1dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/tv_day_number"
                app:layout_constraintEnd_toStartOf="@id/tv_day_number"
                app:layout_constraintTop_toTopOf="@id/tv_day_number"/>

        <View
                android:layout_width="11dp"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/tv_day_number"
                app:layout_constraintStart_toEndOf="@id/tv_day_number"
                app:layout_constraintTop_toTopOf="@id/tv_day_number"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"

            android:layout_below="@id/toolbar"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="27dp"
                    android:text="预订人"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <TextView
                    android:id="@+id/add_inmate"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/roundbutton_blue2"
                    android:gravity="center"
                    android:onClick="click"
                    android:text="添加入住人"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_title"/>

            <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:drawableBottom="@drawable/line"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:drawableStart="@mipmap/bt"
                    android:paddingStart="@dimen/dp_10"
                    android:text="手机号:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:drawableBottom="@drawable/line"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:text="姓名:"
                    android:drawableStart="@mipmap/bt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone"/>
            <TextView
                    android:id="@+id/tv_remark_start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:drawableBottom="@drawable/line"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="备注:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"/>
            <com.xinzeyijia.houselocks.ui.view.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="129dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_bg_write"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_phone"
                    app:layout_constraintStart_toEndOf="@id/tv_phone"
                    app:layout_constraintTop_toTopOf="@id/tv_phone"/>

            <com.xinzeyijia.houselocks.ui.view.ClearEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="129dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_bg_write"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_name"
                    app:layout_constraintStart_toEndOf="@id/tv_name"
                    app:layout_constraintTop_toTopOf="@id/tv_name"/>


            <com.xinzeyijia.houselocks.ui.view.ClearEditText
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="129dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_bg_write"
                    android:hint="请输入备注"
                    android:inputType="text"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_remark_start"
                    app:layout_constraintTop_toTopOf="@id/tv_remark_start"/>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_remark_start"/>
            <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/select_blue_round"
                    android:gravity="center"
                    android:onClick="click"
                    android:text="确认修改"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcw"
                    app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
