<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_outsideLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/round_bg_write"
    android:gravity="center">


    <TextView
        android:id="@+id/tv_tilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tilte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="20dp"
        custom:progress_current="0"
        custom:progress_reached_color="@color/colorPrimary"
        custom:progress_text_color="@color/colorPrimary"
        custom:progress_text_size="@dimen/sp_14"
        custom:progress_unreached_color="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberbar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/uploadding" />


</RelativeLayout>
