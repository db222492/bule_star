<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/rlt_toolbar"/>
    <View
            android:id="@+id/vv"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@mipmap/bank_card_bg"/>
    <TextView
            android:id="@+id/tv_card_name"
            app:layout_constraintTop_toTopOf="@id/vv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
    />
    <TextView
            android:layout_margin="40dp"
            app:layout_constraintTop_toTopOf="@id/vv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="14sp"
    />
    <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** "
            android:textColor="@color/white"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/vv"
            android:textSize="26sp"
    />
    <TextView
            android:id="@+id/tv_card_num"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/tv_code"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="26sp"
    />
    <TextView
            android:id="@+id/update_card_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码更改/设置"
            android:textColor="#666666"
            android:drawableStart="@mipmap/update_card"
            android:autoLink="all"
            android:textSize="18sp"
            android:onClick="click"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vv"
    />
    <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="134dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/select_red_round"
            android:gravity="center"
            android:onClick="click"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_sure"
            android:layout_width="134dp"
            android:layout_height="45dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/select_blue_round"
            android:gravity="center"
            android:onClick="click"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_cancel"/>


</android.support.constraint.ConstraintLayout>