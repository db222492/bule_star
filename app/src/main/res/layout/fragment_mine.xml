<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             android:background="#FFF9F9F9">
    <android.support.v4.widget.NestedScrollView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/img_bg"
                        android:layout_width="match_parent"
                        android:layout_height="202dp"
                        android:background="@mipmap/mine_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="90dp"
                        android:background="@mipmap/def_avater"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/img_avatar"
                        app:layout_constraintStart_toEndOf="@id/img_avatar"
                        app:layout_constraintTop_toTopOf="@id/img_avatar"/>
            </android.support.constraint.ConstraintLayout>


            <TextView
                    android:id="@+id/tv_set5"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/my_money"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="我的收益"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view1"/>


            <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view3"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@id/tv_set5"/>
            <TextView
                    android:id="@+id/tv_set9"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/pay_manger_icon"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="充值管理"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view5"/>


            <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view3"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@id/tv_set9"/>
            <TextView
                    android:id="@+id/tv_set1"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/house_manger_icon"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="小区管理"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/img_bg"/>

            <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_set1"/>


            <TextView
                    android:id="@+id/tv_set2"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/put_taoyuan"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="发布管理"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view9"

            />

            <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view1"
                    app:layout_constraintStart_toStartOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/tv_set2"/>


            <TextView
                    android:id="@+id/tv_set3"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/set_password_icon"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="修改密码"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/view2"

            />


            <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/view2"
                    app:layout_constraintStart_toStartOf="@id/view2"
                    app:layout_constraintTop_toBottomOf="@id/tv_set3"/>


            <TextView
                    android:id="@+id/tv_set4"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/contact_us_icon"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="联系我们"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view3"/>


            <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view3"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@id/tv_set4"/>

            <TextView
                    android:id="@+id/tv_set6"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/update_icon"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="更新房间审核状态"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view4"/>


            <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view3"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@id/tv_set6"/>
            <TextView
                    android:id="@+id/tv_set7"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/frad"
                    android:drawableEnd="@mipmap/right_back"
                    android:drawablePadding="@dimen/dp_10"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="click"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="24dp"
                    android:text="指纹登录"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/view6"/>


            <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"
                    app:layout_constraintEnd_toEndOf="@id/view3"
                    app:layout_constraintStart_toStartOf="@id/view3"
                    app:layout_constraintTop_toBottomOf="@id/tv_set7"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_set8"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        android:drawableStart="@mipmap/update_mine_icon"
                        android:drawableEnd="@mipmap/right_back"
                        android:drawablePadding="@dimen/dp_10"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:onClick="click"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="24dp"
                        android:text="检查更新"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_hint_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hui4"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@id/tv_set8"
                        app:layout_constraintBottom_toBottomOf="@id/tv_set8"
                        app:layout_constraintEnd_toEndOf="@id/tv_set8"
                        android:layout_marginEnd="60dp"
                />
            </android.support.constraint.ConstraintLayout>


            <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#FFDCDCDC"/>


            <TextView
                    android:id="@+id/tv_login_out"
                    android:layout_width="330dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/select_blue_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:onClick="click"
                    android:text="退出登录"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view8"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>