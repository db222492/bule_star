<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rt_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hui_light2">

    <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/round_bg_write">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="添加密码"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>


        <com.xw.repo.XEditText
                android:id="@+id/et_new_psw"
                android:layout_width="264dp"
                android:layout_height="44dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/hui_round_kuang2"
                android:hint="请输新入密码(6位)"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:selectAllOnFocus="true"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"

                android:textSize="16sp"/>
        <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="开始时间："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="到期时间："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_code">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="50dp">
                <TextView
                        android:id="@+id/no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/line"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="再想想"
                        android:textColor="@color/hui3"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/yes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/line"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="确认"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

