<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/rlt_toolbar"></include>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
      android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/cl"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宇迪"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/tv_status"
            app:layout_constraintBottom_toBottomOf="@id/tv_status"
             app:layout_constraintStart_toEndOf="@id/tv_status"
             android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预订人:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
             android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_reserve1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请伱加油~"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_reserve"
            app:layout_constraintBottom_toBottomOf="@id/tv_reserve"
            app:layout_constraintStart_toEndOf="@id/tv_reserve"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_phone_number"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_reserve"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_phone_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17800803904"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_phone_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_phone_number"
            app:layout_constraintStart_toEndOf="@id/tv_phone_number"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_data"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵店日期:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-06-08"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_data"
            app:layout_constraintBottom_toBottomOf="@id/tv_data"
            app:layout_constraintStart_toEndOf="@id/tv_data"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_lave"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离店日期:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_data"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_lave1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-06-08"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_lave"
            app:layout_constraintBottom_toBottomOf="@id/tv_lave"
            app:layout_constraintStart_toEndOf="@id/tv_lave"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入住天数:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_lave"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_day_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2天"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_day_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_day_number"
            app:layout_constraintStart_toEndOf="@id/tv_day_number"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_place_an_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_day_number"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_place_an_order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-06-07  17：58：59"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_place_an_order"
            app:layout_constraintBottom_toBottomOf="@id/tv_place_an_order"
            app:layout_constraintStart_toEndOf="@id/tv_place_an_order"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_place_an_order"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_payment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="159元"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_payment"
            app:layout_constraintBottom_toBottomOf="@id/tv_payment"
            app:layout_constraintStart_toEndOf="@id/tv_payment"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_house_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房型:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_payment"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_house_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好莱坞房"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_house_type"
            app:layout_constraintBottom_toBottomOf="@id/tv_house_type"
            app:layout_constraintStart_toEndOf="@id/tv_house_type"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_uer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_house_type"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_uer_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/00"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_uer_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_uer_number"
            app:layout_constraintStart_toEndOf="@id/tv_uer_number"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_uer_number"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_remark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客人的备注内容"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_remark"
            app:layout_constraintBottom_toBottomOf="@id/tv_remark"
            app:layout_constraintStart_toEndOf="@id/tv_remark"
            android:textColor="#333333"
            android:layout_marginStart="20dp"
            />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tv_retreat_room"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="@dimen/dp_40"
        android:text="拒绝订单"
        android:gravity="center"
        android:background="@drawable/lodger_tv_shape"
        android:textColor="#333333"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        />
    <TextView
        android:id="@+id/tv_add_user"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="@dimen/dp_40"
        android:text="确认订单"
        android:gravity="center"
        android:background="@drawable/lodger_tv_shape"
        android:textColor="#333333"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        />
</RelativeLayout>
