<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/round_bg_write">
    <LinearLayout
            android:id="@+id/lt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxEms="10"
        />
        <TextView
                android:id="@+id/tv_room_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房间数："
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxEms="10"
        />
    </LinearLayout>


    <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="辽宁省营口市鲅鱼圈区"
            android:textColor="@color/black"
            android:maxEms="16"
            android:visibility="gone"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/lt"
            app:layout_constraintTop_toBottomOf="@id/lt"/>

    <TextView
            android:id="@+id/tv_detailed_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:text="红旺家园北门15号楼4单元101"
            android:textColor="@color/bar_grey"
            app:layout_constraintStart_toStartOf="@id/tv_address"
            app:layout_constraintTop_toBottomOf="@id/tv_address"/>

    <TextView
            android:id="@+id/tv_add_room"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/select_blue_round"
            android:gravity="center"
            android:text="添加房间"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_delete"/>

    <TextView
            android:id="@+id/tv_delete"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bottom_bg_select_blue"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>