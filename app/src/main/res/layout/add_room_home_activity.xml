<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <include layout="@layout/rlt_toolbar2"/>
    <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/location_icon"
            android:text="辽宁沈阳市开宇大厦1号楼1单元2楼1320"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/dp_10"
            android:visibility="gone"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:id="@+id/tv_set1"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="36dp"
            android:onClick="click"
            android:background="@mipmap/item_bg"
            
            
            
            android:gravity="start"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="16dp"
            android:text="基本信息"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_location"/>

    <TextView
            android:id="@+id/tv_hint"
            app:layout_constraintTop_toTopOf="@id/tv_set1"
            app:layout_constraintStart_toStartOf="@id/tv_set1"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户型、面积等信息"
            android:textColor="#ff999999"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_fill_in1"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/tv_set1"
            android:text="填写"
            android:onClick="click"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundbutton_blue2"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_set1"

    />
   <TextView
            android:id="@+id/tv_set2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:onClick="click"
            android:background="@mipmap/item_bg"
            
            
            android:gravity="start"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="16dp"
            android:text="价格规则"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_set1"/>
    <TextView
            android:id="@+id/tv_hint2"
            app:layout_constraintTop_toTopOf="@id/tv_set2"
            app:layout_constraintStart_toStartOf="@id/tv_set2"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格设置、退订规则和对客户要求"
            android:textColor="#ff999999"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_fill_in2"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/tv_set2"
            android:text="填写"
            android:layout_marginTop="20dp"
            android:onClick="click"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundbutton_blue2"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_set2"

    />
       <TextView
            android:id="@+id/tv_set3"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:onClick="click"
            android:background="@mipmap/item_bg"
            
            
            android:gravity="start"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="16dp"
            android:text="配套设施"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_set2"/>
    <TextView
            android:id="@+id/tv_hint3"
            app:layout_constraintTop_toTopOf="@id/tv_set3"
            app:layout_constraintStart_toStartOf="@id/tv_set3"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居家、餐厨、卫浴等设施和服务"
            android:textColor="#ff999999"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_fill_in3"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/tv_set3"
            android:text="填写"
            android:onClick="click"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundbutton_blue2"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_set3"

    />
     <TextView
            android:id="@+id/tv_set4"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:onClick="click"
            android:background="@mipmap/item_bg"
            
            
            android:gravity="start"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="16dp"
            android:text="照片信息"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_set3"/>
    <TextView
            android:id="@+id/tv_hint4"
            app:layout_constraintTop_toTopOf="@id/tv_set4"
            app:layout_constraintStart_toStartOf="@id/tv_set4"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充分展示房间亮点"
            android:textColor="#ff999999"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_fill_in4"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/tv_set4"
            android:text="填写"
            android:onClick="click"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundbutton_blue2"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_set4"

    />


    <TextView
            android:id="@+id/tv_sure"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="56dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:background="@drawable/select_blue_round"
            android:gravity="center"
            android:onClick="click"
            android:text="提交审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>