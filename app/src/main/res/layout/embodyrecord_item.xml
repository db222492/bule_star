<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/item_bg"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,468.00"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textSize="25sp"
    />

    <TextView
            android:id="@+id/tv_come"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源：一路向北预定平台"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_money"
            app:layout_constraintTop_toBottomOf="@id/tv_money"
            android:textColor="#ff666666"
            android:textSize="16sp"
    />
    <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:background="@mipmap/order_blue_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/blue"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_come"
            app:layout_constraintTop_toBottomOf="@id/tv_come"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-1-1 15:25"
            android:textColor="#ff666666"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>